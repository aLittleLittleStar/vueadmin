.content
	width: 100%
	height: 100%
	background: #eee
	overflow-y: scroll
	overflow-x: hidden
	.el-row
		display: flex
		justify-content: center
		.el-col
			.el-container.is-vertical
				margin: 4rem 0 6rem
				background: #fff
				border-radius: 0.4rem
				box-shadow: 0 1px 6px rgba(0,0,0,.1)
				.el-header
					display: flex
					justify-content: center
					align-items: center
					font-size: 1.6rem
					border-bottom: 1px solid #EBEEF5
				.el-collapse
					margin: 0 2rem
					border-top: none
					.el-collapse-item
						padding: 0 1rem



.user-info
	margin-right: 0.6rem

.user-info-del
	border-top: 1px dashed rgb(204, 204, 204)